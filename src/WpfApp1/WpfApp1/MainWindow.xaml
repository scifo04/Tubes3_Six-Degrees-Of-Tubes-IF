<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Yellow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="Orange" BorderBrush="Orange" BorderThickness="1">
            <Label Content="FINGERPRINT DETECTOR" 
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                   FontSize="40" FontFamily="Inter"
                   Height="56" Width="780" Margin="10,6,10,10"
                   Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <Border Grid.Column="0" Background="DimGray" BorderBrush="Black" BorderThickness="1" CornerRadius="20" Margin="0,0,10,0">
                <StackPanel Margin="10">
                    <Label Content="Fingerprint" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                    <Label Content="Input" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Center Column -->
            <Border Grid.Column="1" Background="DimGray" BorderBrush="Black" BorderThickness="1" CornerRadius="20" Margin="10,0">
                <StackPanel Margin="10">
                    <Label Content="Fingerprint" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                    <Label Content="Closest" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Right Column -->
            <Border Grid.Column="2" Background="DimGray" BorderBrush="Black" BorderThickness="1" CornerRadius="20" Margin="10,0,0,0">
                <StackPanel Margin="10">
                    <Label Content="List" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                    <Label Content="Biodata" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Background="OrangeRed" Content="Select Image" Width="120" Click="Button_Click"/>
            <Button Background="OrangeRed" Content="Search" Width="120" Margin="10,0,0,0"/>
            <ComboBox Width="150" Margin="10,0,0,0" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="Knuth-Morris-Pratt"/>
                <ComboBoxItem Content="Boyer-Moore"/>
            </ComboBox>
            <Label Content="Execution Time :" Margin="10,0,0,0"/>
            <Label Content="Match Percentage :" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
